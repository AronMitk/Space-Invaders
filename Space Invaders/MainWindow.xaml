<Window x:Class="Space_Invaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Invaders" xmlns:code="clr-namespace:Space_Invaders.Code"
        mc:Ignorable="d"
        Title="Space Invaders" Height="500" Width="800">
    <Grid>
        <Canvas x:Name="MainCanvas" Focusable="True" Background="Black" KeyDown="Canvas_KeyDown" KeyUp="Canvas_KeyUp"/>
        <Label x:Name="EnemiesLeftLabel" Content="Enemies left: 0" Foreground="White" FontSize="16pt" FontWeight="ExtraBold"/>
        <Label x:Name="EndLabel" Content="Game Over!" Foreground="White" FontSize="32pt" FontWeight="ExtraBold" HorizontalAlignment="Center"  VerticalAlignment="Center" Visibility="Collapsed" TextBlock.TextAlignment="Center"/>
    </Grid>
</Window>
